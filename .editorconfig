# .editorconfig

root = true

[*.{js,css}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 80
indent_brace_style = 1TBS
spaces_around_operators = true
quote_type = auto
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.html]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 80
indent_style = space
indent_size = 2
trim_trailing_whitespace = true